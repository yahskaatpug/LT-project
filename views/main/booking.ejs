<% layout('layout') -%>

    <form action='/booking' method='GET' class='form-inline' class="form" style="width: 100%;height: 250px;background-size: cover;background-position: center;padding: 120px 0;background-image: linear-gradient(rgba(0,0,0,.6),rgba(0,0,0,.4)),url(/img/event.jpg);margin: 0px auto;">
        <div class='form-group' style="width: 60%;margin: 0 0 0 20%;">
            <input class="form-control" type='text' name="search" placeholder="day" style="width: 70%;margin: 0;">
            <button class="btn btn-primary btn-large" style="width: 29%;">Search</button>
        </div>
    </form>

<h3 style="text-align: center;padding: 0px 0 20px 0;">LH</h3>
<% x.forEach(function(x){ %>

<div class="daySearch">
    <p>
        <%= x.day %>
    </p>
    <p>
        <%= x.strttime+" "+x.endtime %>
    </p>
    <p>
        <%= x.lt %>
    </p>
    <button class="btn btn-primary btn-large">Book</button>
</div>
<%})%>
