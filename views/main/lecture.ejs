<body>

  <div style="width:30%;margin:20px  auto;">
    <form action="/profile" method="POST">
      <p>
        <select name="day">
          <option>Monday</option>
          <option>Tuesday</option>
          <option>Wednesday</option>
          <option>Thrusday</option>
          <option>Friday</option>
          <option>Saturday</option>
          <option>Sunday</option>
        </select>
      </p>

      <p>
        <input class="thumbnail" type="time" name="strttime" placeholder="start-time" min=0 required>
      </p>
      <p>
        <p>
          <input class="thumbnail" type="time" name="endtime" placeholder="end-time" min=0 required>
        </p>
        <p>
          <input class="thumbnail" type="text" name="lt" placeholder="Lt" required>
        </p>

        <p>
          <p class="full">
            <button type="submit" class="btn btn-info">Submit</button>
    </form>
  </div>
